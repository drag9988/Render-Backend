# Enhanced ONLYOFFICE Configuration for PDF Conversion Backend

# ONLYOFFICE Document Server Configuration
# Leave empty to use enhanced LibreOffice + Python fallbacks only
ONLYOFFICE_DOCUMENT_SERVER_URL=
# Example: ONLYOFFICE_DOCUMENT_SERVER_URL=http://localhost:8000

# Optional: JWT Secret for ONLYOFFICE security (production only)
# ONLYOFFICE_JWT_SECRET=your-secret-key-here

# Conversion timeout (in milliseconds)
ONLYOFFICE_TIMEOUT=120000

# Python path for enhanced conversions
PYTHON_PATH=python3

# Server URL for temporary file serving (required for ONLYOFFICE Document Server)
SERVER_URL=http://localhost:10000

# Temporary directory for file processing
TEMP_DIR=/tmp/pdf-converter

# ConvertAPI Configuration (backup only)
CONVERTAPI_SECRET=
CONVERTAPI_BASE_URL=https://v2.convertapi.com
CONVERTAPI_TIMEOUT=60000

# Application Configuration
NODE_ENV=production
PORT=10000

# Logging
LOG_LEVEL=info

# Rate Limiting (increased for ONLYOFFICE usage)
THROTTLE_SHORT_LIMIT=15
THROTTLE_DAILY_LIMIT=50
THROTTLE_MEDIUM_LIMIT=30
