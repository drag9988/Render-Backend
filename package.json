{
  "name": "pdf-converter-api",
  "version": "2.0.0",
  "description": "Enhanced PDF Converter API with ONLYOFFICE Document Server integration",
  "main": "dist/main.js",
  "scripts": {
    "start": "node dist/main.js",
    "start:dev": "nest start --watch",
    "start:prod": "bash start.sh",
    "start:railway": "node dist/main.js",
    "build": "nest build",
    "build:prod": "npm run build && npm run install:python-deps",
    "install:python-deps": "python3 -m pip install pdf2docx pdfplumber python-docx pandas python-pptx openpyxl || echo 'Python dependencies installation failed - will install on demand'",
    "healthcheck": "curl -f http://0.0.0.0:${PORT:-3000}/health || exit 1",
    "test:onlyoffice": "curl -s http://localhost:${PORT:-10000}/onlyoffice/enhanced-status | jq .",
    "verify:setup": "node verify-enhanced-setup.js",
    "test:setup": "bash test-onlyoffice-setup.sh"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/throttler": "^5.2.0",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "form-data": "^4.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "rxjs": "^7.8.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.9",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^5.0.3",
    "@types/form-data": "^2.5.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.13",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": "18.x"
  }
}
